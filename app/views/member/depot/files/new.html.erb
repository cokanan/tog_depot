<div class="titleB"><img src="/tog_depot/images/tog-depot_iconfile_48px.gif" border="0" /> Upload new file</div>
<br /><br />

<%= error_messages_for :file %>
<% form_for :file, :url => member_depot_files_path, :html => {:action => 'create', :id => "settings", :multipart => true, :method => "post"} do |f| -%>
    <div class="fields">
    <p><label for="file_title">File title</label><%= f.text_field :title, :class=>"fieldbox wide" %></p>
<p>
        <label for="post_state">Parent folder</label>
        <%= select_tag "state", options_for_select(Conversatio::Post.states, :draft) -%></p>
      <p><label for="post_tag_list">Tags (separated with ,)</label><%= f.text_field :tag_list, :class=>"fieldbox wide" -%></p>
      <p>
        <label for="post_state">Visibility</label>
        <%= select_tag "state", options_for_select(Conversatio::Post.states, :draft) -%></p>
      <p><label for="file_description">File description</label><%= f.text_area :description, :class=>"fieldbox wide" %></p>
      <p>
        <label for="file_file">Select file</label><%= f.file_field :uploaded_data %></p>
    </div>
  </fieldset> 
  
  <div class="actions"><%= submit_tag 'Back to filelist', :class => 'button mainaction' %><%= submit_tag 'Create file', :class => 'button mainaction' %></div>
<% end -%>
