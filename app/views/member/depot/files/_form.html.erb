  <fieldset>
    <legend>Metadata</legend>
    <div class="fields">
      <p><label for="post_tag_list">Tags (separated with ,)</label><%= f.text_field :tag_list, :class=>"fieldbox wide" -%></p>
      <p><label for="post_state">Status</label><%= select_tag "state", options_for_select(Conversatio::Post.states, :draft) -%></p>
    </div>
  </fieldset>
  <fieldset>
    <legend>Content</legend>
    <div class="fields">
      <p><label for="file_title">File title</label><%= f.text_field :title, :class=>"fieldbox wide" %></p>
      <p><label for="file_description">File description</label><%= f.text_area :description, :class=>"fieldbox wide" %></p>
      <p><label for="file_file">File</label><%= file_field 'file', 'uploaded_data' %></p>
    </div>
  </fieldset>

