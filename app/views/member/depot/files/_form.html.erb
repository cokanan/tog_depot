<div class="fields">
  <%= f.hidden_field :folder %>
  <%= f.hidden_field :father_id %>  

  <p><label for="file_title"><%=I18n.t('tog_depot.model.name')%></label><%= f.text_field :name, :class=>"fieldbox wide" %></p>
  <p><label for="file_state"><%=I18n.t('tog_depot.model.path')%></label>
    <%= path(@file, true)%>
  </p>
  <p><label for="file_tag_list"><%=I18n.t('tog_depot.model.tags')%></label><%= f.text_field :tag_list, :class=>"fieldbox wide" -%>
    <br/><small><%=I18n.t('tog_depot.model.tags_explanation')%></small></p>

   <p><label for="file_state"><%=I18n.t('tog_depot.model.privacy')%></label><%= f.check_box :privacy%> <%=I18n.t('tog_depot.model.privacy_explanation')%></p>
  
  <p><label for="file_description"><%=I18n.t('tog_depot.model.description')%></label><%= f.text_area :description, :class=>"fieldbox wide", :size => '40x6'%></p>

  <% unless @file.folder %>
  
    <p><label for="file_file"><%=I18n.t('tog_depot.model.file')%></label><%= f.file_field :file %></p>  
  
  <%end%>
</div>