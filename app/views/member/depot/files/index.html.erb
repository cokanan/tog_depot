<% content_for :sidebar do %>
  tag_cloud_files
<% end %>



<p><%= link_to 'Upload new file', {:action => 'new'}, :class => 'button add' %></p>


<div class="portlet portletB">
    <h2><span>Files</span></h2>

    <div class="portlet_content"> 
        <ul>
          <% if @my_files.empty? %>
            <li class="clearfix">There isn't any files yet.
          <% else %>
              <% @my_files.each do |file| %>
                <li class="clearfix">
                  <%= file.title %> </li>
              <% end %>
          <% end %> 
        </ul>
    </div>    
</div>
