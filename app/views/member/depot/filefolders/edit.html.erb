<div class="titleB"><img src="/tog_depot/images/tog-depot_iconfolder_48px.gif" border="0" /> Edit folder<br /><br /></div>

<%= error_messages_for :file %>
<% form_for :file, :url => member_depot_file_path(@file), :html => {:action => 'update', :id => "settings", :multipart => true, :method => "put"} do |f| -%>

   <fieldset>
    <div class="fields">
      <p><label for="post_tag_list"><b>Tags (separated with ,)</b></label><%= f.text_field :tag_list, :class=>"fieldbox wide" -%></p>
      <p>
        <label for="post_state"><b>Visibility</b></label><%= select_tag "state", options_for_select(Conversatio::Post.states, :draft) -%></p>
      <p><label for="file_title"><b>File title</b></label><%= f.text_field :title, :class=>"fieldbox wide" %></p>
      <p><label for="file_description"><b>File description</b></label><%= f.text_area :description, :class=>"fieldbox wide" %></p>
      <p><%= @file.public_filename %></p>
      <p><label for="file_file"><b>Select file</b></label><%= f.file_field :uploaded_data %></p>
    </div>
  </fieldset> 
  <div class="actions"><%= f.submit "Update",:class=>"button mainaction" %></div>
<% end -%>

