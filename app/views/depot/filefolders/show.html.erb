<% include_stylesheet "/tog_depot/stylesheets/depot" %>
<% content_for :sidebar do %>
tag_cloud
<% end %>


<h1><%= @folder.title%></h1>
<b>Tags:</b>
	<% tags = @folder.tag_list %>
	<% if !tags.blank? %>
    <% for tag in tags %>
      <%= link_to tag, tags_depot_filefolders_url(:tag => tag) %>
    <% end %>
  <% else %>
    No tags.
  <% end %>
<br />
<b>Description:</b> <%= @folder.description %><br />
<b>Owner:</b> <%= @folder.user.login %><br />
<b>Created at:</b> <%= @folder.created_at %><br />
<b>Updated at:</b> <%= @folder.updated_at %><br />

<div class="portlet_content"  >
        <table border="0" cellpadding="0" cellspacing="0">
                 <thead>
                  <tr bgcolor="#eeeeee">
                   <th rowspan="2"><img src="/tog_depot/images/1px.gif" border="0" height="4" width="4"/>Sel.</th>
                   <th><img src="/tog_core/images/ico/arrow-up.gif" border="0" /><br /></th>
                   <th rowspan="2">Type</th>
                   <th><img src="/tog_core/images/ico/arrow-up.gif" border="0" /><br /></th>
                   <th rowspan="2">Filename</th>
                   <th><img src="/tog_core/images/ico/arrow-up.gif" border="0" /><br /></th>
                   <th rowspan="2">Release date</th>
                   <th><img src="/tog_core/images/ico/arrow-up.gif" border="0" /><br /></th>
                   <th rowspan="2">Owner</th>
                   <th><img src="/tog_core/images/ico/arrow-up.gif" border="0" /><br /></th>
                   <th rowspan="2">Times dl.</th>
                   <th><img src="/tog_core/images/ico/arrow-up.gif" border="0" /><br /></th>
                   <th rowspan="2">In folder</th>
                   <th><img src="/tog_core/images/ico/arrow-up.gif" border="0" /><br /></th>
                   <th rowspan="2">Vis.</th>
                  </tr>
                  <tr bgcolor="#eeeeee">
                    <th bgcolor="#eeeeee"><img src="/tog_core/images/ico/arrow-down.gif" border="0" /></th>
                    <th bgcolor="#eeeeee"><img src="/tog_core/images/ico/arrow-down.gif" border="0" /></th>
                    <th bgcolor="#eeeeee"><img src="/tog_core/images/ico/arrow-down.gif" border="0" /></th>
                    <th bgcolor="#eeeeee"><img src="/tog_core/images/ico/arrow-down.gif" border="0" /></th>
                    <th bgcolor="#eeeeee"><img src="/tog_core/images/ico/arrow-down.gif" border="0" /></th>
                    <th bgcolor="#eeeeee"><img src="/tog_core/images/ico/arrow-down.gif" border="0" /></th>
                    <th bgcolor="#eeeeee"><img src="/tog_core/images/ico/arrow-down.gif" border="0" /></th>
                  </tr>
                 </thead>
                 <tbody>
                 
          <% if @my_files.empty? %>
            <tr><td>There isn't any files yet.
               </td>
            </tr>
          <% else %>
             <% @my_files.each do |file| %>
                <tr>
                 <td><input type="checkbox" /></td>
                 <td colspan="2"><img src="/tog_depot/images/1px.gif" border="0" height="4" width="5"/><br />
                 <div class="fileicon_32"><img src="/tog_depot/images/1px.gif" border="0" height="14" width="5"/><br /><%= file.filename.to_s.scan(/\.\w+$/) %></div>
                 </td>
                <td colspan="2">
								 <h3><%= link_to file.title, depot_file_url(file.id) %></h3>
                  </td>
                  <td colspan="2"><%= file.created_at %></td>
                  <td colspan="2"><%= file.user.login %></td>
                  <td style="padding-right:20px;" align="right" colspan="2">56</td>
                  <td colspan="2">
										<% if file.filefolder%>
										<%= file.filefolder.title %>
                    <%end%>
                    </td>
                  <td colspan="2"><img src="/tog_depot/images/privacity/member.gif" border="0" alt="Member file"/></td>
                  </tr>
                  <tr><td class="brd_bt" colspan="3"></td><td class="end_list" colspan="12">
                  
                  <% tags = file.tag_list %>
                  <b>Tags:</b>
                  <% if !tags.blank? %>
                    <% for tag in tags %>
                      <%= link_to tag, tags_depot_files_url(:tag => tag, :user => file.user_id) %>
                    <% end %>
                  <% else %>
                    No tags.
                  <% end %>
	               </td>
               </tr>
             <% end %>
          <% end %> 
        </tbody>
        </table>
            
</div><br />
<div class="info_results" style="width:688px;">
	<div class="floater_L" style="float:left;">328 file(s)</div>
  <div class="floater_R" style="float:right; padding-right:4px;">
  	<img src="/tog_core/images/ico/arrow-left-blue-small.gif" border="0" /> Showing 1 / 290 <img src="/tog_core/images/ico/arrow-right-blue-small.gif" border="0" />
  </div>
  <div class="float_breaker" style="clear:both;"></div>
</div>

